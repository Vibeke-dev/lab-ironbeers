<!-- views/random-beer.hbs -->
<div class='card mb-3' style='max-width: 540px;'>
  <div class='row no-gutters'>
    <div class='col-md-4'>
      <img src='{{image_url}}' class='card-img' alt='{{name}}' />
    </div>
    <div class='col-md-8'>
      <div class='card-body'>
        <h5 class='card-title'>{{name}}</h5>
        <p class='card-text'>{{description}}</p>
        <p class='card-text'>{{tagline}}</p>
        <h6 class='card-title'>Food Pairing:</h6>
        <p class='card-text'>{{food_pairing}}</p>
        <p class='card-text'><b>Brewers Tips:</b> {{brewers_tips}}</p>
      </div>
    </div>
  </div>
</div>